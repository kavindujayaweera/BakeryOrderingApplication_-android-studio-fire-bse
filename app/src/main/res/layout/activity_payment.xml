<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F4F4F4">

    <!-- Card Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1234 5678 9876 5432"
        android:inputType="number"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter your card number"/>

    <!-- Cardholder Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cardholder Name"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter the cardholder's name"/>

    <!-- Expiry Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiry Date (MM/YY)"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etExpiryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MM/YY"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter the card expiry date"/>

    <!-- CVV -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="123"
        android:inputType="numberPassword"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter the card CVV"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Payment"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:background="#2CA531"
        android:padding="14dp"
        android:layout_marginTop="20dp"

        android:importantForAccessibility="yes"
        android:contentDescription="Submit your payment details"/>

</LinearLayout>
